{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "sourceMap": false,
    "strict": false,
    "target": "esnext",
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["./assets"],
      "@components": ["./app/components"],
      "@config": ["./app/config"],
      "@constants": ["./app/constants"],
      "@hooks": ["./app/hooks"],
      "@i18n": ["./app/i18n"],
      "@navigators": ["./app/navigators"],
      "@provider": ["./app/provider"],
      "@screens": ["./app/screens"],
      "@services": ["./app/services"],
      "@store": ["./app/store"],
      "@utils": ["./app/utils"],
    },
  },
  "types": [
    "node"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app/**/*", // include all files in the src directory
    "types/declarations.d.ts"
  ],
}